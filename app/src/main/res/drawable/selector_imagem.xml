<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado - quando o usuário está clicando no botão -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Cor de fundo quando pressionado -->
            <solid android:color="#D1B599" />
            <!-- Borda quando pressionado -->
            <stroke android:width="2dp" android:color="#FF8842" />
            <!-- Bordas arredondadas -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Estado selecionado - quando o botão está selecionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- Cor de fundo quando selecionado -->
            <solid android:color="#F2DCC9" />
            <!-- Borda quando selecionado -->
            <stroke android:width="3dp" android:color="#FF8842" />
            <!-- Bordas arredondadas -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Estado padrão - quando não está nem pressionado nem selecionado -->
    <item>
        <shape android:shape="rectangle">
            <!-- Cor de fundo no estado normal (igual ao fundo do layout) -->
            <solid android:color="#F2DCC9" />
            <!-- Sem borda no estado normal -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>